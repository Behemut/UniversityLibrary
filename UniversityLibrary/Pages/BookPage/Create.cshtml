@page
@model UniversityLibrary.Pages.BookPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PublishedDate" class="control-label"></label>
                <input asp-for="Book.PublishedDate" class="form-control" />
                <span asp-validation-for="Book.PublishedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Stock" class="control-label"></label>
                <input asp-for="Book.Stock" class="form-control" />
                <span asp-validation-for="Book.Stock" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label class="control-label">Escoga autores del libro:</label>
                 <select multiple="multiple" asp-for="SelectedAuthors"  class="selectpicker form-control" asp-items="Model.OptionsAuthors" >
                    <option value="">Seleccionar autor</option>
                 </select>
             </div>

             <div class="form-group">
                <label class="control-label">Escoga generos del libro:</label>
                 <select asp-for="SelectedGenres" multiple="multiple"  class="selectpicker form-control" asp-items="Model.OptionsGenres"></select>
             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>           
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
